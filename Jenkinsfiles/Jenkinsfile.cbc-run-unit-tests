pipeline {
  agent {
    kubernetes {
      defaultContainer "bb2-cbc-build"
      yamlFile "Jenkinsfiles/cbc-pod-deployment-config.yml"
    }
  }

  stages {
    stage("Create venv and install dependencies") {
      steps {
        githubNotify(context: 'ci/jenkins/check-unit-tests', description: 'This commit is being unit tested.',  status: 'PENDING');
        sh """
          python -m venv venv
          . venv/bin/activate
          # Install from vendor files in requirements.txt
          make reqs-install
          # Install additional packages in requirements.dev.txt
          make reqs-install-dev
        """
      }
    }

    stage("Run Django unit tests") {
      steps{
        sh """
        . venv/bin/activate
        python runtests.py
        """
      }
    }
  }

  post {
    success {
      githubNotify(context: 'ci/jenkins/check-unit-tests', description: 'Unit testing SUCCESS!',  status: 'SUCCESS');
    }
    failure {
      githubNotify(context: 'ci/jenkins/check-unit-tests', description: 'Unit testing FAILED!',  status: 'FAILED');
    }
  }
}
