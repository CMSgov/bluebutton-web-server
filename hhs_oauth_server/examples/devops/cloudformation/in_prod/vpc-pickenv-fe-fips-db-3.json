                          {"Ref": "DatabasePrefix"},
                          {"Ref": "TagKeyStack"},
                          "_",
                          {"Fn::FindInMap" : ["DBType",
                                              {"Ref": "DatabaseType"},
                                              "DbNameTable" ]},
                          "@'  $PGDATA/db_backup.sh \n",

                          "sed -i 's@REPLACE_PG_DATA_DIR@${PGDATA}@' $PGDATA/db_backup.sh \n",

                          "MAC_ADDR=`curl -s http://169.254.169.254/latest/meta-data/network/interfaces/macs/` \n",
                          "HOST_IP=`curl -s http://169.254.169.254/latest/meta-data/network/interfaces/macs/$MAC_ADDR/local-ipv4s/` \n",
                          "echo $HOST_IP:5432:",{"Ref": "DatabasePrefix"},
                                                {"Ref": "TagKeyStack"},
                                                "_",
                                                {"Fn::FindInMap" : ["DBType",
                                                                    {"Ref": "DatabaseType"},
                                                                    "DbNameTable" ]},
                          ":",{"Ref": "PgsqlMaster"},":",{"Ref": "PgsqlPassword"}," >>$PGDATA/.pgpass \n",

                          "chown postgres:postgres $PGDATA/db_backup.sh \n",
